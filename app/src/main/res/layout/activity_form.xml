<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/logoug"
        android:id="@+id/imageView"
        android:alpha="0.2"
        />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            tools:context=".FormActivity" android:id="@+id/Formulario">

        <TextView
                android:text="Registro de Usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:textColor="#3F51B5"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_Name"
                android:hint="Ingrese sus Nombres"
                android:layout_marginTop="36dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_Apellidos"
                android:hint="Ingrese sus Apellidos"
                android:layout_marginTop="16dp"
                tools:ignore="TouchTargetSizeCheck"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_ID"
                android:hint="Ingrese su cédula o pasaporte"
                tools:ignore="TouchTargetSizeCheck"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_email"
                android:hint="Correo Electrónico"
                android:layout_marginTop="16dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/edit_Phone"
                android:hint="Número telefónico"
                android:layout_marginTop="16dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_Pwd1"
                android:hint="Crear contraseña"
                android:layout_marginTop="16dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_Pwd2"
                android:hint="Confirmar Contraseña"
                android:layout_marginTop="16dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:paddingHorizontal="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Guardar"
                app:layout_constraintTop_toBottomOf="@+id/edit_Pwd2"
                android:layout_marginTop="60dp"/>

    </LinearLayout>
    </RelativeLayout>