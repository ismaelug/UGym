<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ClockActivity">

        <ImageView
            android:layout_width="411dp"
            android:layout_height="1045dp" app:srcCompat="@drawable/logoug"
            android:id="@+id/imageView6"
            android:alpha="0.2" app:layout_constraintVertical_bias="0.0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="50px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="352dp"
                android:layout_height="30dp"
                android:layout_marginVertical = "25dp"
                android:text="Elija su horario de entrenamiento:"
                android:textColor="#054A9E"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.525"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/listViewScheduleButtons"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/buttonActions"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/buttonCancelSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:text="Cancelar"/>

                <Button
                    android:id="@+id/buttonSaveSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Guardar"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>